<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardCompras"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/card"
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/canjear"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:drawableTint="#ffffff"
                    android:padding="5dp"
                    android:text="@string/label_codventa"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="13dp"
                    android:text="@string/label_codcliente"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/chivo"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:drawableTint="#ffffff"
                    android:textColor="#ffffff"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/com_edt_codventa"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="27dp"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/editextdesng"
                    android:layout_weight="1"
                    android:textColor="#35395E"
                    android:enabled="false"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/com_edt_codcliente"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="27dp"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/editextdesng"
                    android:layout_weight="1"
                    android:textColor="#35395E"
                    android:enabled="false"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="45dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/horas_extras"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:drawableTint="#ffffff"
                    android:padding="5dp"
                    android:text="@string/label_date"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="60dp"
                    android:text="@string/label_status"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/punto_de_venta"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:drawableTint="#ffffff"
                    android:textColor="#ffffff"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/com_edt_fecha"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="27dp"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/editextdesng"
                    android:layout_weight="1"
                    android:textColor="#35395E"
                    android:enabled="false"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/com_edt_status"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="27dp"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/editextdesng"
                    android:layout_weight="1"
                    android:textColor="#35395E"
                    android:enabled="false"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="@string/label_cliente"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/clientes"
                    android:drawablePadding="10dp"
                    android:drawableTint="#ffffff"
                    android:textColor="#ffffff"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/com_edt_cliente"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/editextdesng"
                    android:textColor="#35395E"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:text="@string/label_monto"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:background="@drawable/btnazul"
                    android:drawableLeft="@drawable/billetes"
                    android:drawablePadding="10dp"
                    android:drawableTint="#ffffff"
                    android:textColor="#ffffff"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/com_edt_monto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/editextdesng"
                    android:textColor="#35395E"
                    android:enabled="false"
                    android:textColorHint="#ffffff"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/com_btnDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnrojo"
                    android:drawableLeft="@drawable/detalle"
                    android:drawablePadding="0dp"
                    android:drawableTint="#ffffff"
                    android:text="@string/button_detail"
                    android:textColor="#ffffff" />

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>