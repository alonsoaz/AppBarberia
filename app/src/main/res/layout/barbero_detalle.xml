<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBarbero"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:background="@drawable/btnazul"
            android:drawableLeft="@drawable/brush"
            android:drawablePadding="10dp"
            android:drawableTint="#ffffff"
            android:padding="5dp"
            android:text="@string/label_nombbarb"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/barb_edt_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/editextdesng"
            android:textColor="#252354"
            android:textColorHint="#ffffff"
            android:enabled="false"/>

        <Button
            android:id="@+id/barb_btnServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="9dp"
            android:background="@drawable/btnrojo"
            android:drawableLeft="@drawable/silla"
            android:drawablePadding="10dp"
            android:drawableTint="#ffffff"
            android:text="@string/header_servicios"
            android:textColor="#ffffff" />

    </LinearLayout>

</android.support.v7.widget.CardView>